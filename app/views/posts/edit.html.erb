<% provide(:title, "Bloggies || Edit Post: #{@current_post.id}") %>

<%= form_for @current_post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>

  <%#= hidden_field_tag 'post[user_id]', 10%>
  <%= f.hidden_field :user_id %>

  <%= f.submit %>
<% end %>

<%= @current_post.inspect %>
